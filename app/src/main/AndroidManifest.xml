<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edudb.bdude">

    <application
        android:name=".application.BDudeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.flow.lobby.create_new_help_request.view.CreateHelpRequestActivity"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".ui.flow.lobby.requests_list_screen.view.HelpRequestsListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.flow.login.view.LoginActivity"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".ui.flow.lobby.my_requests.view.MyRequestsActivity"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".ui.flow.lobby.request_details.view.RequestDetailsActivity" />

        <uses-library android:name="com.google.android.maps" />
    </application>

</manifest>