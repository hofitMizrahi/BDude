<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/send_help_request">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="16dp"
            android:text="@string/i_need_help_with"
            android:textColor="@color/colorDark"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/need_help_with_editT"
            style="@style/text_control_style"
            android:focusable="true"
            android:maxLength="20"
            android:maxLines="1"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/more_details"
            android:textColor="@color/colorDark"
            android:textSize="28sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/more_details_editT"
            style="@style/text_control_style"
            android:focusable="true"
            android:lines="3"
            android:gravity="top|right"
            android:hint="במה אתה צריך עזרה?"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/women_avatar"
                    android:layout_width="60dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/custom_radio_selector"
                    android:layout_height="60dp"/>

                <RadioButton
                    android:id="@+id/man_avatar"
                    android:layout_width="60dp"
                    android:background="@drawable/custom_radio_selector"
                    android:layout_margin="8dp"
                    android:layout_height="60dp"/>

            </RadioGroup>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/enter_phone_number"
            android:textColor="@color/colorDark"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/phone_ET"
            style="@style/text_control_style"
            android:inputType="number"
            android:focusable="false"
            android:maxLines="1"
            android:maxLength="10"
            android:lines="1"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/enter_phone_number_disclaimer"
            android:textColor="@color/colorDark"
            android:textSize="16sp"
            android:textStyle="italic" />

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/send_help_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector_green"
        android:enabled="false"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:focusable="false"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:text="@string/send_request"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>